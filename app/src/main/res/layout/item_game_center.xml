<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/game_center_layout_height"
    android:layout_marginBottom="@dimen/default_general_margin"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/app_bar_default_elevation"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_center_image_height"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_center_bottom_layout_height"
            android:layout_below="@+id/item_img"
            android:paddingStart="@dimen/default_general_margin">


            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_tiny_padding"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/default_medium_text_size" />


            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:padding="@dimen/default_tiny_padding"
                android:textColor="@color/black_alpha_45"
                android:textSize="@dimen/default_small_text_size" />

            <Button
                android:id="@+id/item_btn"
                android:layout_width="@dimen/game_center_button_width"
                android:layout_height="@dimen/game_center_button_height"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/default_general_margin"
                android:background="@drawable/btn_pin_bg"
                android:text="@string/download"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_small_text_size" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>