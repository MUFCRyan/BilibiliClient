<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chase_bangumi_card_height"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/app_bar_default_elevation"
    app:cardElevation="@dimen/app_bar_default_elevation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/chase_bangumi_image_width"
            android:layout_height="@dimen/chase_bangumi_image_height"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/default_general_margin"
            android:scaleType="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/item_img"
            android:orientation="vertical"
            android:padding="@dimen/default_tiny_padding"
            android:paddingBottom="@dimen/default_grow_margin"
            android:paddingTop="@dimen/default_grow_margin">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_grow_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/default_tiny_padding"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/default_medium_text_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_tiny_padding"
                android:paddingTop="@dimen/default_tiny_padding"
                android:text="@string/not_watch"
                android:textColor="@color/black_alpha_45"
                android:textSize="@dimen/default_small_text_size" />

            <TextView
                android:id="@+id/item_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_tiny_padding"
                android:paddingTop="@dimen/default_tiny_padding"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_small_text_size" />


            <TextView
                android:id="@+id/item_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_tiny_padding"
                android:paddingTop="@dimen/default_tiny_padding"
                android:textColor="@color/black_alpha_45"
                android:textSize="@dimen/default_small_text_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_light" />

    </RelativeLayout>


</android.support.v7.widget.CardView>





